<h2>Новости</h2>
<ul class="nav nav-pills">
	<% @news_categories.each_with_index do |news_category, index| %>
		<li <%if index == 0%>class="active"<%end%>><%= link_to news_category.label %></li>
	<% end %>
</ul>
<div id="home_news_content">
	<% unless @news.nil? %>
		<div id="NewsCarousel" class="carousel slide">
		    <ol class="carousel-indicators">
		    <li data-target="#NewsCarousel" data-slide-to="0" class="active"></li>
		    <% for i in 1..@news.count-1 %>
			    <li data-target="#NewsCarousel" data-slide-to="<%=i%>"></li>
		    <% end %>
		    </ol>
		    <!-- Carousel items -->
		    <div class="carousel-inner">
		    	<% @news.each_with_index do |news_item, index| %>
				    <div class="<%if index == 0 %>active<%end%> item">
				    	<div class="row">
							<div class="span6">
								<h4><%= news_item.title %></h4>	
							</div>
						</div>
						<div class="row-fluid">
							<div class="span3">
								<img src="http://placehold.it/150x160"/>
							</div>
							<div class="span9">
								<%=raw news_item.announce %>
							</div>
						</div>
		    		</div>
		    	<%end%>
		    </div>
		</div>
	<% else %>
		новостей нет
	<% end %>
</div>


