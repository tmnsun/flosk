<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= content_for?(:title) ? yield(:title) : "Flosk" %></title>
    <meta name="description" content="<%= content_for?(:description) ? yield(:description) : "Flosk" %>">
    <%= stylesheet_link_tag "application", :media => "all" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>
    <%= yield(:head) %>
  </head>
  <body class="<%= controller_name %> <%= action_name %>">
    <div class="container">
      <div class="row">
        <div class="span3">
          <%= link_to image_tag("http://placehold.it/250x100"), root_path, :class => 'brand' %>
        </div>
        <div class="span6">
          <div class="row-fluid">
            <%= render 'layouts/navigation' %>
          </div>
          <div class="row-fluid">
            <div class="span12">
              <form id="custom-search-form" class="form-search form-horizontal">
                <div class="input-append span12">
                  <input type="text" class="search-query" placeholder="Search" style="width: 90%;">
                  <button type="submit" class="btn"><i class="icon-search"></i></button>
                </div>
              </form>
            </div>
          </div>
        </div>
        <div class="span3">
          <%= render 'layouts/usermenu' %>
        </div>
      </div>
    </div>
    <div id="main" role="main">
      <div class="container">
        <div class="content">
           <div class="row">
            <div class="span12">
              <%= render 'layouts/messages' %>
              <%= yield %>
            </div>
          </div>
          <footer>
          </footer>
        </div>
      </div> <!--! end of .container -->
    </div> <!--! end of #main -->
  </body>
</html>
